@{
    ViewData["Title"] = "Products";
}

<h1>@ViewData["Title"]</h1>

<p>This page is for managing products</p>


<a asp-action="Create">Create new Carousel Item</a>



<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Category</th>
            <th scope="col">Price</th>
            <th scope="col">Description</th>
            <th scope="col">Image Source</th>
            <th scope="col">Image</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @{ 
            for(int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <th scope="row">@Model[i].ID</th>
                    <td scope="row">@Model[i].Name</td>
                    <td scope="row">@Model[i].Category</td>
                    <td scope="row">@Model[i].Price</td>
                    <td scope="row">@Model[i].Description</td>
                    <td scope="row">@Model[i].ImageSource</td>
                    <td scope="row"><img src="@Model[i].ImageSource" style="max-width:32px;" /></td>
                    <td scope="row"><a asp-action="Edit" asp-route-ID="@Model[i].ID">Edit</a></td>
                    <td scope="row"><a asp-action="Delete" asp-route-ID="@Model[i].ID" onclick="return ConfirmDelete();">Delete</a></td>
                </tr>
            }
        }
    </tbody>
</table>

@section Scripts
{
    <script src="~/js/alerts.js"></script>
}