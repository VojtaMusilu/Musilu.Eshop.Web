@model IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>


    @{
        if (Model != null && Model.CarouselItems != null && Model.CarouselItems.Count > 0)
        {
            <div id="carousel" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    @{

                        for (int i = 0; i < Model.CarouselItems.Count; i++)
                        {
                            if (i == 0)
                            {
                                <li data-target="#carousel" data-slide-to="@i" class="active"></li>

                            }
                            else
                            {
                                <li data-target="#carousel" data-slide-to="@i"></li>

                            }
                        }

                    }
                </ol>
                <div class="carousel-inner">
                    @{

                        for (int i = 0; i < Model.CarouselItems.Count; i++)
                        {
                            if (i == 0)
                            {
                                <div class="carousel-item active">
                                    <img class="d-block w-100" src="@Model.CarouselItems[i].ImageSource" alt="@Model.CarouselItems[i].ImageAlt">
                                </div>

                            }
                            else
                            {
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="@Model.CarouselItems[i].ImageSource" alt="@Model.CarouselItems[i].ImageAlt">
                                </div>

                            }
                        }

                    }

                </div>
                <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        }
    }

    <h1 class="display-4">products</h1>



    @{


        if (Model != null && Model.Products != null && Model.Products.Count >= 0)
        {

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Category</th>

                    </tr>
                </thead>
                <tbody>


                    @{
                        if (Model != null && Model.Products != null)
                        {
                            for (int i = 0; i < Model.Products.Count; i++)
                            {
                                <tr>
                                    <th scope="row">@Model.Products[i].ID</th>
                                    <td>@Model.Products[i].Name</td>
                                    <td>@Model.Products[i].Category</td>
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>



            <div class="container px-4 px-lg-5 mt-5 ">
                @{
                    int count = 0;
                    for (int i = 0; i < Model.Products.Count; i += 3)
                    {
                        count = Model.Products.Count - i;
                        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">

                            <div class="col mb-5">
                                @{
                                    if (count > 0)
                                    {

                                        <div class="card">
                                            <img src="@Model.Products[i].ImageSource" class="card-img-top" alt="@Model.Products[i].ImageAlt">
                                            <div class="card-body">
                                                <h5 class="card-title">@Model.Products[i].Name</h5>
                                                <h6>@Model.Products[i].Price</h6>
                                                <a asp-action="Detail" asp-route-ID="@Model.Products[i].ID" class="btn btn-primary">Detail</a>
                                                <div class="d-flex">
                                                    <input class="form-control text-center me-3" id="inputQuantity" type="num" value="1" style="max-width: 3rem" />
                                                    <button class="btn btn-outline-dark flex-shrink-0" type="button" onclick="Buy(@Model.Products[i].ID,'@Url.Action("AddOrderItemsToSession", "CustomerOrderNotCart", new { Area = "Customer" })', '#total_price', '@System.Globalization.CultureInfo.CurrentCulture.Name')">
                                                        <i class="bi-cart-fill me-1"></i>
                                                        Add to cart
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                            <div class="col">
                                @{
                                    if (count > 1)
                                    {
                                        <div class="card">
                                            <img src="@Model.Products[i+1].ImageSource" class="card-img-top" alt="@Model.Products[i+1].ImageAlt">
                                            <div class="card-body">
                                                <h5 class="card-title">@Model.Products[i + 1].Name</h5>
                                                <h6>@Model.Products[i + 1].Price</h6>
                                                <a asp-action="Detail" asp-route-ID="@Model.Products[i+1].ID" class="btn btn-primary">Detail</a>
                                                <div class="d-flex">
                                                    <input class="form-control text-center me-3" id="inputQuantity" type="num" value="1" style="max-width: 3rem" />
                                                    <button class="btn btn-outline-dark flex-shrink-0" type="button" onclick="Buy(@Model.Products[i+1].ID,'@Url.Action("AddOrderItemsToSession", "CustomerOrderNotCart", new { Area = "Customer" })', '#total_price', '@System.Globalization.CultureInfo.CurrentCulture.Name')">
                                                        <i class="bi-cart-fill me-1"></i>
                                                        Add to cart
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                            <div class="col">
                                @{
                                    if (count > 2)
                                    {
                                        <div class="card">
                                            <img src="@Model.Products[i+2].ImageSource" class="card-img-top" alt="@Model.Products[i+2].ImageAlt">
                                            <div class="card-body">
                                                <h5 class="card-title">@Model.Products[i + 2].Name</h5>
                                                <h6>@Model.Products[i + 2].Price</h6>
                                                <a asp-action="Detail" asp-route-ID="@Model.Products[i+2].ID" class="btn btn-primary">Detail</a>
                                                <div class="d-flex">
                                                    <input class="form-control text-center me-3" id="inputQuantity" type="num" value="1" style="max-width: 3rem" />
                                                    <button class="btn btn-outline-dark flex-shrink-0" type="button" onclick="Buy(@Model.Products[i+2].ID,'@Url.Action("AddOrderItemsToSession", "CustomerOrderNotCart", new { Area = "Customer" })', '#total_price', '@System.Globalization.CultureInfo.CurrentCulture.Name')">
                                                        <i class="bi-cart-fill me-1"></i>
                                                        Add to cart
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    }
                }
            </div>
        }
    }


    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Product image-->
                        <img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="..." />
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">Fancy Product</h5>
                                <!-- Product price-->
                                $40.00 - $80.00
                            </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">View options</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>
</div>
