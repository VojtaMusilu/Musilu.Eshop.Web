@using Musilu.Eshop.Web.Areas.Admin.Controllers

@model CarouselItem
@{
    if (String.IsNullOrWhiteSpace(ViewBag.Action) == false)
    {
        <form asp-action="@ViewBag.Action" method="post"  enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            @{
                if(ViewBag.Action == nameof(CarouselController.Edit))
                {
                   <input asp-for="ID" type="hidden" class="form-control"> 
                }
            }
            
        <div class="form-group">
            <label asp-for="Image">Image Source</label>
            <input id="fileupload" asp-for="Image" class="form-control-file">
            <span asp-validation-for="Image"></span>
        </div>
        <div class="form-group">
            <label asp-for="ImageAlt">Image Alt</label>
            <input asp-for="ImageAlt" type="text" class="form-control" placeholder="Enter image alt">
            <span asp-validation-for="ImageAlt"></span>
        </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

    }
}
